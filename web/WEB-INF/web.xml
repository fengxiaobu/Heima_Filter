<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!--配置过滤器-->
    <filter>
        <filter-name>FilterAutoLogin</filter-name>
        <filter-class>com.heima.filter.FilterAutoLogin</filter-class>
    </filter>
    <filter>
        <filter-name>FilterEncoding</filter-name>
        <filter-class>com.heima.filter.FilterEncoding</filter-class>
    </filter>
    <listener>
        <listener-class>com.heima.listener.ListenerDemon</listener-class>
    </listener>

    <!--配置验证码Servlet-->
    <servlet>
        <servlet-name>CheckImgServlet</servlet-name>
        <servlet-class>com.heima.servlet.CheckImgServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletUserLogin</servlet-name>
        <servlet-class>com.heima.servlet.ServletUserLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletRegister</servlet-name>
        <servlet-class>com.heima.servlet.ServletRegister</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletRegister</servlet-name>
        <url-pattern>/ServletRegister</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletFindByUsername</servlet-name>
        <servlet-class>com.heima.servlet.ServletFindByUsername</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletFindByUsername</servlet-name>
        <url-pattern>/ServletFindByUsername</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletUserLogin</servlet-name>
        <url-pattern>/ServletUserLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckImgServlet</servlet-name>
        <url-pattern>/CheckImgServlet</url-pattern>
    </servlet-mapping>

    <!--配置过滤器-->
    <filter-mapping>
        <filter-name>FilterEncoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterAutoLogin</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>